<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/edit_book"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#7ec5e6"
            android:clickable="true"
            android:gravity="center"
            android:padding="1dp"
            android:text="Edit"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/share_book"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#7e95e6"
            android:clickable="true"
            android:gravity="center"
            android:padding="1dp"
            android:text="Share"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/upload_book"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#ad7ee6"
            android:clickable="true"
            android:gravity="center"
            android:padding="1dp"
            android:text="Upload"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/delete_book"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#f48086"
            android:gravity="center"
            android:padding="1dp"
            android:text="Delete" />
    </LinearLayout>

</RelativeLayout>